<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" >
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#F47D42"
                android:startColor="#F47D42"
                android:endColor="#000000"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#878787"
                />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape  android:shape="rectangle" >
            <corners
                android:radius="20dp"
                />
            <solid
                android:color="#cfcfcf"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#000000"
                />
        </shape>
    </item>

</selector>